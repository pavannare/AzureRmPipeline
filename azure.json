{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusters_hd1_name": {
            "defaultValue": "hd1",
            "type": "String"
        },
        "storageAccounts_hdinsight_externalid": {
            "defaultValue": "/subscriptions/623268e1-421e-47ed-aa57-cd0b56fcf3cb/resourceGroups/ng/providers/Microsoft.Storage/storageAccounts/hdinsight",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.HDInsight/clusters",
            "apiVersion": "2018-06-01-preview",
            "name": "[parameters('clusters_hd1_name')]",
            "location": "West US",
            "properties": {
                "clusterVersion": "3.6.1000.67",
                "osType": "Linux",
                "clusterDefinition": {
                    "blueprint": "https://blueprints.azurehdinsight.net/hadoop-3.6.1000.67.2011120524.json",
                    "kind": "HADOOP",
                    "componentVersion": {
                        "Hadoop": "2.7"
                    }
                },
                "computeProfile": {
                    "roles": [
                        {
                            "name": "headnode",
                            "targetInstanceCount": 2,
                            "hardwareProfile": {
                                "vmSize": "standard_d12_v2"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "sshuser"
                                }
                            }
                        },
                        {
                            "name": "workernode",
                            "targetInstanceCount": 1,
                            "hardwareProfile": {
                                "vmSize": "standard_e2_v3"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "sshuser"
                                }
                            }
                        },
                        {
                            "name": "zookeepernode",
                            "targetInstanceCount": 3,
                            "hardwareProfile": {
                                "vmSize": "standard_a1_v2"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "sshuser"
                                }
                            }
                        }
                    ]
                },
                "tier": "standard",
                "encryptionInTransitProperties": {
                    "isEncryptionInTransitEnabled": false
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "name": "hdinsight.blob.core.windows.net",
                            "resourceId": "[parameters('storageAccounts_hdinsight_externalid')]",
                            "container": "[concat(parameters('clusters_hd1_name'), '-2020-12-09t09-11-47-593z')]",
                            "isDefault": true
                        }
                    ]
                },
                "minSupportedTlsVersion": "1.2"
            }
        }
    ]
}





